{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2016",
      "noImplicitAny": false,
      "inlineSourceMap": true,
      "inlineSources": true,
      "allowJs": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "baseUrl": "src",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": [
      "src/**/*"
    ]
  }